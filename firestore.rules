rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow reading user data for game participants
      allow read: if request.auth != null && 
        resource.data.uid in request.auth.token.firebase.identities;
      
      // User data subcollections (army decks, game history, etc.)
      match /data/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Games - authenticated users can read/write games they participate in
    match /games/{gameId} {
      allow read, write: if request.auth != null;
      
      // More restrictive: only game participants can modify
      allow write: if request.auth != null &&
        (request.auth.uid in resource.data.players ||
         request.auth.uid in request.resource.data.players);
    }

    // Matchmaking - users can only manage their own matchmaking entry
    match /matchmaking/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow reading for matchmaking purposes
      allow read: if request.auth != null;
    }

    // Global leaderboards and tournaments (read-only for users)
    match /leaderboards/{document=**} {
      allow read: if request.auth != null;
    }

    match /tournaments/{document=**} {
      allow read: if request.auth != null;
    }
  }
}